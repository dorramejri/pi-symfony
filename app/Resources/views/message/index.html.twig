{% extends 'base.html.twig' %}

{% block body %}
    <h1>Messages list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Touser</th>
                <th>Msg</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td><a href="{{ path('api_message_show', { 'id': message.id }) }}">{{ message.id }}</a></td>
                <td>{% if message.date %}{{ message.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ message.toUser }}</td>
                <td>{{ message.msg }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('api_message_show', { 'id': message.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
