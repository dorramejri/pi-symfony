{% extends 'base.html.twig' %}

{% block body %}
    <h1>Message</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if message.date %}{{ message.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Touser</th>
                <td>{{ message.toUser }}</td>
            </tr>
            <tr>
                <th>Msg</th>
                <td>{{ message.msg }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('api_message_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
